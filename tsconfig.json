{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "target": "es2020",
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@utils/*": ["lib/src/utils/*"],
      "@exceptions/*": ["lib/src/exceptions/*"],
      "@interfaces/*": ["lib/src/interfaces/*"],
      "@constants": ["lib/postgres.constants.ts"],
    }
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
